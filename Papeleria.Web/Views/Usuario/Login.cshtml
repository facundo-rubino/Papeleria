
@if (@ViewBag.error != null)
{
    <script>alertify.error('@ViewBag.error')</script>
}

@if (@ViewBag.Mensaje != null)
{

    <script>alertify.success('@ViewBag.Mensaje')</script>

}

<style>
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }

