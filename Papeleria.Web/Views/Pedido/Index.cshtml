@using BussinessLogic.Entidades
@model IEnumerable<Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Pedidos</h1>

<div class="form-group">
    <a asp-action="Create" value="CREAR NUEVO" class="btn btn-primary">CREAR NUEVO</a>
</div>



<table class="table">
    <thead>
        <tr>
            <th>
                Tipo
            </th>
            <th>
                Fecha creación
            </th>
            <th>
                Fecha prometida
            </th>
            <th>
                Monto total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in ViewBag.Pedidos)
        {
            <tr>
                @if (item.EsPedidoExpress)
                {
                    <td>Express</td>
                }
                @if (!item.EsPedidoExpress)
                {
                    <td>Común</td>
                }

                <td>
                    @item.Fecha
                </td>
                <td>
                    @item.FechaPrometida
                </td>
                <td>
                    @item.MontoTotal
                </td>
                <td>
                    @Html.ActionLink("Anular", "Anular", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>

        }
    </tbody>
</table>
